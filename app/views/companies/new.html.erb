<div class="text-center">
    <h1>Minha conta</h1>
</div>

<% @company.errors.full_messages.each do |message| %>
    <div class="alert alert-danger" role="alert">
        <p><%= message %></p>
    </div>
<% end %>

<div class="form-group row">
    <%= form_for @company, local: true do |f| %>
        <%= f.label :fantasy_name %><br>
        <%= f.text_field :fantasy_name %><br>
        <%= f.label :corporate_name %><br>
        <%= f.text_field :corporate_name %><br>
        <%= f.label :email %><br>
        <%= f.text_field :email %><br>
        <%= f.label :document_number %><br>
        <%= f.text_field :document_number %><br>
        <%= f.label :address %><br>
        <%= f.text_field :address %><br>
        <%= f.submit 'Enviar'%><br>
    <% end %>
</div>    