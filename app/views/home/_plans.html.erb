<% if @plans.empty? %>
  <p class="msg-error"><%= 'Sem planos cadastrados' %></p>
<% end %>

<% @plans.each do |plan| %>
<dl>
  <dt>Plataforma: </dt>
  <dd><%= plan.platform %></dd>
  <dt>Preço: </dt>
  <dd><%= plan.price %></dd>
  <dt>Limite mensal: </dt>
  <dd><%= plan.limit_monthly %></dd>
  <dt>Limite diário: </dt>
  <dd><%= plan.limit_daily %></dd>
  <dt>Custo: </dt>
  <dd><%= plan.cost %> por mensagem</dd>
  <dt>Promoção: </dt>
  <dd><%= plan.promo %></dd>
  <div id="plan-<%= plan.id %>">
    <%= link_to 'Comprar', orders_path(plan_id: plan.id), method: :post %>
  </div>
</dl>
<% end %>