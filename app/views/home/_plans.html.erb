<% @plans.each do |p| %>
<dl>
  <dt>Plataforma: </dt>
  <dd><%= p.platform %></dd>
  <dt>Preço: </dt>
  <dd><%= p.price %></dd>
  <dt>Limite mensal: </dt>
  <dd><%= p.limit_monthly %></dd>
  <dt>Limite diário: </dt>
  <dd><%= p.limit_daily %></dd>
  <dt>Custo: </dt>
  <dd><%= p.cost %> por mensagem</dd>
  <dt>Promoção: </dt>
  <dd><%= p.promo %></dd>
</dl>
<% end %>
