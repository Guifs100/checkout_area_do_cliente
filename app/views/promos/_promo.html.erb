<dl>
    <dt><%= Promo.human_attribute_name(:title) %>: </dt>
        <dd><%= promo.title %></dd>          
    <dt><%= Promo.human_attribute_name(:discount) %>: </dt>
        <dd><%= promo.discount %></dd>
    <dt><%= Promo.human_attribute_name(:start_date) %>: </dt>
        <dd><%= promo.start_date %></dd>
    <dt><%= Promo.human_attribute_name(:end_date) %>: </dt>
        <dd><%= promo.end_date %></dd>
    <dt><%= Promo.human_attribute_name(:limit_order) %>: </dt>
        <dd><%= promo.limit_order %></dd>
    <dt><%= Promo.human_attribute_name(:employee_id) %>: </dt>
        <dd><%= promo.employee.email %></dd>
    <dt><%= Promo.human_attribute_name(:status) %>: </dt>
        <dd><%= Promo.human_attribute_name("status.#{promo.status}") %>
        </dd>
    <% if promo.end_date > Time.zone.today && promo.waiting? %>
        <%= link_to 'Aprovar Promoção', approve_promo_path(promo),
                                id:"approve-#{promo.id}",
                                method: :post  %>
    <% end %>
</dl>
<br>